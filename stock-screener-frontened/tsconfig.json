{
  "compilerOptions": {
    // --- Type Checking ---
    "target": "ES6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // --- Module Resolution ---
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // --- Emission ---
    "noEmit": true,
    "incremental": true,
    // --- Next.js Specific ---
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    // --- Aliases ---
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "esModuleInterop": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
